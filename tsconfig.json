{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["*", "src/*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*"]
}
